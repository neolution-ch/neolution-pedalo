@page
@using PedaloWebApp.Core.Domain.Entities;
@model PedaloWebApp.Pages.Passengers.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<h4>Passengers</h4>

<!-- Logik, dass es so viele Felder hat wie Kapazität implementieren -->
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Passenger.FirstName" class="control-label"></label>
                <input asp-for="Passenger.FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Passenger.LastName" class="control-label"></label>
                <input asp-for="Passenger.LastName" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="Passenger" type="hidden" />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <!-- Zurückleiten auf Buchung erstellen-->
    <a asp-page="Index">Back to List</a>
</div>