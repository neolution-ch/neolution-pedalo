@page
@using PedaloWebApp.Core.Domain.Entities;
@model PedaloWebApp.Pages.Bookings.AddPassengerModel
@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<h4>Add Passengers</h4>

<div class="row">
    <div class="col-md-4">
        <h4>Passenger</h4>
        <form method="post">
            <div class="form-group">
                @for (int i = 0; i < Model.Capacity - 1; i++)
                {
                    <select asp-for="PassengerId[i]" class="form-control">
                        <option value="">-- Select Passenger --</option>
                        @foreach (var item in Model.Passenger)
                        {
                            <option value="@item.PassengerId">
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </option>
                        }
                    </select>
                }
            </div>
            <div class="form-group">
                <input asp-for="BookingId" type="hidden" />
                <input asp-for="Capacity" type="hidden" />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>