@page
@model PedaloWebApp.Pages.Bookings.IndexModel
@{
    ViewData["Title"] = "Bookings";
}

<h1>@ViewData["Title"]</h1>
<br />
<div>
    <a asp-page="./Create" asp-route-id="BookingId" class="btn btn-primary btn-lg btn-block">Create</a>
</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Customer")
            </th>
            <th>
                @Html.DisplayName("Pedalo")
            </th>
            <th>
                @Html.DisplayName("Start Date")
            </th>
            <th>
                @Html.DisplayName("End Date")
            </th>
            <th>
                @Html.DisplayName("Passengers")
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Bookings)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pedalo.Name)
                </td>
                <td>
                    @item.StartDate.ToString("dd.MM.yyyy HH:mm")
                </td>
                <td>
                    @(item.EndDate != null ? item.EndDate.Value.ToString("dd.MM.yyyy HH:mm") : "n/a")
                </td>
                <td>
                    @item.BookingPassengers.Count
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.BookingId" class="btn btn-outline-warning">Edit</a>
                </td>
                <td>
                    <a asp-page="./Delete" asp-route-id="@item.BookingId" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>