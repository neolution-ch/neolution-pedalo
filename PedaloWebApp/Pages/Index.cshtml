@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Dashboard</h1>
</div>

<div> <!--Placeholder to see how big the container is -->
    <h2 style="text-align:center;">Most Popular Pedaloes</h2>
    <div style="display:flex;justify-content:space-around;">
        @foreach (var pedalo in Model.PopularPedaloes)
        {
            <div style="border: 15px solid @pedalo.Color;border-radius:50%;width:150px;height:150px;text-align:center;display:inline-block;margin-right:10px;">
                <div style="display:flex;justify-content:center;align-items:center;height:100%;">
                    <p style="font-size:30px;color:black;margin:0;">@pedalo.BookingsCount</p>
                </div>
            </div>
        }
    </div>
    <div style="display:flex;justify-content:space-around;">
        @foreach (var pedalo in Model.PopularPedaloes)
        {
            <div style="text-align:center;font-weight:bold;font-size:15px;">
                <span>@pedalo.Name</span>
            </div>
        }
    </div>
</div>
<br />
<br />
<div style="display: flex;">
    <div style="width: 40%;">
        <a asp-page="/Bookings/Create" class="btn btn-primary" style="height:20%; width:90%; align-content:center; font-size:35px; font-weight:bold; text-align:center;">Quick Create Booking</a>
    </div>

    <div> <!--Placeholder to see how big the container is -->
        <div>
            <h2 style="text-align:center;">Business' Highest-Grossing Customers</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Bookings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model.TopCustomers)
                    {
                        <tr>
                            <th scope="row">@customer.Rank</th>
                            <td>@customer.FirstName</td>
                            <td>@customer.LastName</td>
                            <td>@customer.BookingsCustomerCount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

