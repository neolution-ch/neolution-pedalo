@page
@model PedaloWebApp.Pages.Pedaloes.IndexModel
@{
    ViewData["Title"] = "Pedaloes";
}

<h1>@ViewData["Title"]</h1>
<br />
<div>
    <a asp-page="./Create" asp-route-id="PedaloId" class="btn btn-primary btn-lg btn-block">Create</a>
</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pedaloes[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedaloes[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedaloes[0].Capacity)
            </th>
            <th>
                @Html.DisplayName("Hourly Rate")
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Pedaloes)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HourlyRate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PedaloId" class="btn btn-outline-warning">Edit</a>
            </td>
            <td>
                <a asp-page="./Delete" asp-route-id="@item.PedaloId" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>